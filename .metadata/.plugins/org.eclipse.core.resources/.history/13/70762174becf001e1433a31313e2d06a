package org.kh.java;

public class Variable4 {
	public static void main(String[] args) {
		String name = "park";
		short age = 27;
		float height = 173.4f;
		double weight = 80.5;
		char init = 'k';
		/*
		 \n : 줄바꿈
		 \t : 탭
		 \\ : \를 출력
		 \' : '를 출력
		 \" : "를 출력
		 */
		System.out.println("이름: \""+name+"\"");
		System.out.printf("\n나이: %d", age);
		System.out.printf("\n키: %f", height);
		System.out.printf("\n체중: %.3f", weight);
		System.out.printf("\n이니셜: %s", init);
	}
}
